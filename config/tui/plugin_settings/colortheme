" Colorscheme settings
set termguicolors

set background=dark
let g:gruvbox_material_background = 'medium'
let g:gruvbox_material_enable_bold = 1
let g:gruvbox_material_visual = 'reverse'
let g:gruvbox_material_diagnostic_virtual_text = 'colored'
let g:gruvbox_material_disable_terminal_colors = 1
colorscheme gruvbox-material

" let g:sonokai_style = 'shusia'
" let g:sonokai_enable_italic = 1
" colorscheme sonokai

" colorscheme aurora


" Custom color settings
"     Do not use special highlight for sign column
highlight clear SignColumn

"     Line highlight
"         Enable cursor line position tracking
set cursorline

"         Remove the underline from enabling cursorline
" highlight clear CursorLine

"     Improve visibility of warning messages
hi WarningMsg ctermfg=black ctermbg=yellow guifg=black guibg=yellow gui=None

"     Set color for bracket pairs
hi MatchParen guibg=darkcyan guifg=NONE

