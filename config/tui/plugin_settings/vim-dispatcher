function! NvimIdeBuild()
    let l:cwd_au = getcwd()

    if exists("g:nvim_ide_build_root")
        exe 'cd '.g:nvim_ide_build_root
    endif

    wa
    Make

    if exists("g:nvim_ide_build_root")
        exe 'cd '.l:cwd_au
    endif
endfunction

nnoremap <f8> :call NvimIdeBuild()<CR>
inoremap <f8> <C-o>:call NvimIdeBuild()<CR>

nnoremap <f7> :AbortDispatch<CR>
inoremap <f7> <C-o>:AbortDispatch<CR>

